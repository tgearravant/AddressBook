#parse("/templates/master.vm")
#@master()
#if ($contact.hasAddress())
<div class="details_container_div">
  <span class="contact_text">Current Address</span>
  <div class="contact_address_div">
    <span class="address_text">$contact.currentAddress().street()<br>
    #if ("$contact.currentAddress().apartment()" != "")
      $contact.currentAddress().apartment()<br>
    #end
    $contact.currentAddress().city(), $contact.currentAddress().state() $contact.currentAddress().zipCode()<br>
    $contact.currentAddress().country()</span>
  </div>
</div>
#end
#if ($contact.hasPreferredPhoneNumbers())
<div class="details_container_div">
  <span class="contact_text">Preferred Phone Numbers</span>    
  <div class="contact_address_div">
  #foreach ($pn in $contact.getPreferredPhoneNumbers())
    <span class="phone_text">
      $display_utils_class.capitalize($pn.type) : $pn.getNumber()
    </span><br>
  #end
  </div>
</div>
#end
#foreach($address in $contact.addresses())
  #if ($address != $contact.currentAddress())
    <div class="details_container_div">
      <span class="contact_text">Previous Address</span>
      <div class="contact_address_div">
	     <span class="address_text">$address.street()<br>
	    #if ("$address.apartment()" != "")
	      $address.apartment()<br>
	    #end
	    $address.city(), $address.state() $address.zipCode()<br>
	    $address.country()</span>
      </div>
    </div>
  #end
#end
#end
